@model CarDealershipManager.Core.DTOs.VeiculoDTO

@{
    ViewData["Title"] = "Deletar Veículo";
}

<h1><i class="fas fa-car"></i> Deletar Veículo</h1>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja deletar este veículo?
</div>

<hr />

<div class="row">
    <!-- Card de Informações -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informações do Veículo</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4"><i class="fas fa-tag text-primary"></i> Modelo</dt>
                    <dd class="col-sm-8"><strong>@Html.DisplayFor(m => m.Modelo)</strong></dd>

                    <dt class="col-sm-4"><i class="fas fa-calendar-alt text-info"></i> Ano</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.AnoFabricacao)</dd>

                    <dt class="col-sm-4"><i class="fas fa-dollar-sign text-success"></i> Preço</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model?.Descricao))
                        {
                            @Model.Descricao
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-tags text-warning"></i> Tipo</dt>
                    <dd class="col-sm-8">
                        @(string.IsNullOrEmpty(Model?.TipoVeiculoDescricao) ? Model?.TipoVeiculo.ToString() : Model?.TipoVeiculoDescricao)
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-align-left text-secondary"></i> Descrição</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model?.Descricao))
                        {
                            @Model.Descricao
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-industry text-dark"></i> Fabricante</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model?.FabricanteNome))
                        {
                            @Model.FabricanteNome
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Painel de Confirmação -->
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-trash"></i> Confirmar Exclusão</h5>
            </div>
            <div class="card-body">
                <p class="text-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Esta ação é irreversível!</strong>
                </p>
                <p>Ao confirmar, o veículo <strong>"@Model?.Modelo"</strong> será permanentemente removido do sistema.</p>

                <div class="alert alert-light">
                    <small class="text-muted">
                        <i class="fas fa-lightbulb"></i>
                        <strong>Dica:</strong> Verifique se não há vendas ou registros associados antes de excluir.
                    </small>
                </div>

                <form asp-action="Delete" id="deleteForm" class="mt-3">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger" id="btnDelete">
                            <i class="fas fa-trash"></i> Confirmar Exclusão
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar e Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Confirmação adicional e loading no botão
            $("#deleteForm").submit(function (e) {
                e.preventDefault();

                const modelo = "@(Model?.Modelo ?? "")";
                const confirmMessage = `Tem CERTEZA que deseja deletar o veículo "${modelo}"?\n\nEsta ação NÃO pode ser desfeita!`;

                if (confirm(confirmMessage)) {
                    const submitBtn = $("#btnDelete");
                    submitBtn.prop("disabled", true)
                             .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deletando...');
                    this.submit();
                }
            });

            // Auto-dismiss alerts (caso existam)
            setTimeout(function () {
                $('.alert').not('.alert-light').fadeOut('slow');
            }, 5000);
        });
    </script>
}