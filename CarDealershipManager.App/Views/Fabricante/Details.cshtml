@model CarDealershipManager.Core.DTOs.FabricanteDTO

@{
    ViewData["Title"] = "Detalhes do Fabricante";
}

<h1>Detalhes do Fabricante</h1>

<!-- Mensagens de Erro -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-industry"></i> Informações do Fabricante
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-tag text-primary"></i> Nome
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Nome</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-globe text-success"></i> País de Origem
                    </dt>
                    <dd class="col-sm-8">
                        @Model.PaisOrigem
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar text-info"></i> Ano de Fundação
                    </dt>
                    <dd class="col-sm-8">
                        @Model.AnoFundacao
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-link text-warning"></i> Website
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <a href="@Model.Website" target="_blank" class="text-decoration-none">
                                @Model.Website
                                <i class="fas fa-external-link-alt fa-sm"></i>
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Estatísticas
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-car text-primary"></i> Total de Veículos
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary fs-6">@Model.TotalVeiculos</span>
                        @if (Model.TotalVeiculos == 0)
                        {
                            <small class="text-muted ms-2">Nenhum veículo cadastrado</small>
                        }
                        else
                        {
                            <small class="text-success ms-2">
                                @(Model.TotalVeiculos == 1 ? "veículo cadastrado" : "veículos cadastrados")
                            </small>
                        }
                    </dd>
                </dl>

                @if (Model.TotalVeiculos > 0)
                {
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Dica:</strong>
                        <a asp-controller="Veiculo" asp-action="Index" asp-route-fabricanteId="@Model.Id" class="alert-link">
                            Clique aqui para ver os veículos deste fabricante
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Painel de Ações -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-cogs"></i> Ações Disponíveis
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Editar Fabricante
                    </a>

                    @if (Model.TotalVeiculos == 0)
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Deletar Fabricante
                        </a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-danger" disabled
                                title="Não é possível deletar fabricante com veículos cadastrados">
                            <i class="fas fa-trash"></i> Deletar Fabricante
                        </button>
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Para deletar, remova primeiro todos os veículos deste fabricante
                        </small>
                    }
                </div>

                <hr class="my-3">

                <div class="d-grid">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Voltar para Lista
                    </a>
                </div>
            </div>
        </div>

        <!-- Card de Informações Extras -->
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb"></i> Informações Adicionais
                </h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <ul class="list-unstyled mb-0">
                        <li><i class="fas fa-history text-info"></i> <strong>Fundado há:</strong> @(DateTime.Now.Year - Model.AnoFundacao) anos</li>
                        @if (Model.TotalVeiculos > 0)
                        {
                            <li><i class="fas fa-trophy text-warning"></i> <strong>Status:</strong> Fabricante ativo</li>
                        }
                        else
                        {
                            <li><i class="fas fa-moon text-secondary"></i> <strong>Status:</strong> Sem veículos cadastrados</li>
                        }
                    </ul>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Tooltip para botões desabilitados
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}