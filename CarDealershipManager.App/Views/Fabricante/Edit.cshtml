@model CarDealershipManager.Core.Models.Fabricante

@{
    ViewData["Title"] = "Editar Fabricante";
}

<h1>Editar</h1>

<h4>Fabricante</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 🔹 Mantém o Id escondido para o POST -->
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaisOrigem" class="form-label"></label>
                <input asp-for="PaisOrigem" class="form-control" />
                <span asp-validation-for="PaisOrigem" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnoFundacao" class="form-label"></label>
                <input asp-for="AnoFundacao" class="form-control" />
                <span asp-validation-for="AnoFundacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Website" class="form-label"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}