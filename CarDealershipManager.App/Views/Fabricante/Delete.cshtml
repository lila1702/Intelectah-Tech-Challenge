@model CarDealershipManager.Core.DTOs.FabricanteDTO

@{
    ViewData["Title"] = "Deletar Fabricante";
}

<h1>Deletar Fabricante</h1>

<!-- Mensagens de Erro -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja deletar este fabricante?
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-industry"></i> Informações do Fabricante
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-tag text-primary"></i> @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Html.DisplayFor(model => model.Nome)</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-globe text-success"></i> @Html.DisplayNameFor(model => model.PaisOrigem)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PaisOrigem)
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-calendar text-info"></i> @Html.DisplayNameFor(model => model.AnoFundacao)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AnoFundacao)
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-link text-warning"></i> @Html.DisplayNameFor(model => model.Website)
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <a href="@Model.Website" target="_blank" class="text-decoration-none">
                                @Html.DisplayFor(model => model.Website)
                                <i class="fas fa-external-link-alt fa-sm"></i>
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Estatísticas
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-car text-primary"></i> Total de Veículos
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.TotalVeiculos</span>
                        @if (Model.TotalVeiculos > 0)
                        {
                            <small class="text-warning ms-2">
                                <i class="fas fa-exclamation-triangle"></i>
                                Verifique se todos os veículos foram removidos antes de deletar
                            </small>
                        }
                        else
                        {
                            <small class="text-success ms-2">
                                <i class="fas fa-check-circle"></i>
                                Nenhum veículo cadastrado
                            </small>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Painel de Confirmação -->
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-trash"></i> Confirmar Exclusão
                </h5>
            </div>
            <div class="card-body">
                <p class="text-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Esta ação é irreversível!</strong>
                </p>
                <p>Ao confirmar, o fabricante <strong>"@Model.Nome"</strong> será permanentemente removido do sistema.</p>

                <div class="alert alert-light">
                    <small class="text-muted">
                        <i class="fas fa-lightbulb"></i>
                        <strong>Dica:</strong>
                        @if (Model.TotalVeiculos > 0)
                        {
                            <span class="text-warning">Este fabricante possui @Model.TotalVeiculos veículo(s) cadastrado(s). Remova todos os veículos antes de deletar o fabricante.</span>
                        }
                        else
                        {
                            <span>Este fabricante não possui veículos cadastrados e pode ser removido com segurança.</span>
                        }
                    </small>
                </div>

                <form asp-action="Delete" id="deleteForm" class="mt-3">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger" id="btnDelete"
                                @(Model.TotalVeiculos > 0 ? "disabled" : "")>
                            <i class="fas fa-trash"></i>
                            @if (Model.TotalVeiculos > 0)
                            {
                                <span>Não é possível deletar (@Model.TotalVeiculos veículo(s))</span>
                            }
                            else
                            {
                                <span>Confirmar Exclusão</span>
                            }
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar e Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // Confirmação adicional e loading no botão
            $("#deleteForm").submit(function(e) {
                e.preventDefault();

                const fabricanteNome = "@Model.Nome";
                const confirmMessage = `Tem CERTEZA que deseja deletar o fabricante "${fabricanteNome}"?\n\nEsta ação NÃO pode ser desfeita!`;

                if (confirm(confirmMessage)) {
                    const submitBtn = $("#btnDelete");
                    submitBtn.prop("disabled", true)
                            .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deletando...');

                    // Submeter o formulário
                    this.submit();
                }
            });
        });
    </script>
}