@model CarDealershipManager.Core.DTOs.ConcessionariaDTO

@{
    ViewData["Title"] = "Deletar Concessionária";
}

<h1><i class="fas fa-building"></i> Deletar Concessionária</h1>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja deletar esta concessionária?
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Informações da Concessionária</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4"><i class="fas fa-tag text-primary"></i> Nome</dt>
                    <dd class="col-sm-8"><strong>@Model.Nome</strong></dd>

                    <dt class="col-sm-4"><i class="fas fa-map-marker-alt text-danger"></i> Endereço</dt>
                    <dd class="col-sm-8">@Model.Endereco</dd>

                    <dt class="col-sm-4"><i class="fas fa-city text-secondary"></i> Cidade</dt>
                    <dd class="col-sm-8">@Model.Cidade</dd>

                    <dt class="col-sm-4"><i class="fas fa-flag text-info"></i> Estado</dt>
                    <dd class="col-sm-8">@Model.Estado</dd>

                    <dt class="col-sm-4"><i class="fas fa-mail-bulk text-warning"></i> CEP</dt>
                    <dd class="col-sm-8">@Model.CEP</dd>

                    <dt class="col-sm-4"><i class="fas fa-phone text-success"></i> Telefone</dt>
                    <dd class="col-sm-8">@Model.Telefone</dd>

                    <dt class="col-sm-4"><i class="fas fa-envelope text-primary"></i> E-mail</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4"><i class="fas fa-warehouse text-dark"></i> Capacidade Máx.</dt>
                    <dd class="col-sm-8">@Model.CapacidadeMaximaVeiculos</dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Painel de Confirmação -->
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-trash"></i> Confirmar Exclusão</h5>
            </div>
            <div class="card-body">
                <p class="text-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Esta ação é irreversível!</strong>
                </p>
                <p>Ao confirmar, a concessionária <strong>"@Model.Nome"</strong> será permanentemente removida do sistema.</p>

                <form asp-action="Delete" id="deleteForm" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger" id="btnDelete">
                            <i class="fas fa-trash"></i> Confirmar Exclusão
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar e Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#deleteForm").submit(function (e) {
                e.preventDefault();
                const nome = "@Model.Nome";
                if (confirm(`Tem CERTEZA que deseja deletar a concessionária "${nome}"?\n\nEsta ação NÃO pode ser desfeita!`)) {
                    const btn = $("#btnDelete");
                    btn.prop("disabled", true)
                       .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deletando...');
                    this.submit();
                }
            });
        });
    </script>
}